{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist/types", 
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
